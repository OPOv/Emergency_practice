<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:background="@color/colorWhite"
   >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:orientation="horizontal"
            android:id="@+id/action_bar"
            android:background="@color/colorOrange"
            android:elevation="12dp">

            <ImageButton
                android:id="@+id/detail_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/back_arrow"
                android:layout_gravity="center_vertical"
                android:onClick="back_btn"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_weight="1"
                android:text="병원"
                android:layout_marginEnd="40dp"
                android:gravity="center"
                android:fontFamily="@font/jua"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />

        </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <TextView
                android:id="@+id/content_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hello"
                android:gravity="center"
                android:fontFamily="@font/jua"
                android:textColor="@color/colorDarkgray"
                android:layout_margin="15dp"/>


            <ImageView
                android:id="@+id/content_image1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                />

            <TextView
                android:id="@+id/content_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hello"
                android:gravity="center"
                android:fontFamily="@font/jua"
                android:layout_margin="15dp"
                android:textColor="@color/colorDarkgray"/>


            <ImageView
                android:id="@+id/content_image2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"

                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                />

            <TextView
                android:id="@+id/content_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hello"
                android:gravity="center"
                android:fontFamily="@font/jua"
                android:layout_margin="15dp"
                android:textColor="@color/colorDarkgray"/>


            <ImageView
                android:id="@+id/content_image3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"

                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                />

            <TextView
                android:id="@+id/content_text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hello"
                android:gravity="center"
                android:fontFamily="@font/jua"
                android:layout_margin="15dp"
                android:textColor="@color/colorDarkgray"/>


            <ImageView
                android:id="@+id/content_image4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"

                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                />

            <TextView
                android:id="@+id/content_text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hello"
                android:gravity="center"
                android:fontFamily="@font/jua"
                android:layout_margin="15dp"
                android:textColor="@color/colorDarkgray"/>


            <ImageView
                android:id="@+id/content_image5"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"

                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                />


        </LinearLayout>




    </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>