<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:background="@color/colorWhite"
   >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        card_view:cardCornerRadius="10dp"
        android:layout_margin ="5dp">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/detail_image"
                android:layout_width="match_parent"
                android:layout_height="169dp"
                android:scaleType="fitXY"
              />

            <TextView
                android:id="@+id/detail_subject"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/detail_image"
                android:gravity="right"
                android:text="TextView"
                android:fontFamily="@font/sangmon"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/detal_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:text="TextView"
                android:fontFamily="@font/sangmon"
                android:gravity="right"/>

            <TextView
                android:id="@+id/detail_name"
                android:layout_width="380dp"
                android:layout_height="45dp"
                android:layout_alignBottom="@+id/detail_image"
                android:layout_alignParentStart="true"
                android:background="#33000000"
                android:gravity="center"
                android:text="TextView"
                android:fontFamily="@font/sangmon"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"


                android:textStyle="bold" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/content_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hello"
                android:gravity="center"
                android:fontFamily="@font/sangmon"/>


            <ImageView
                android:id="@+id/content_image1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/forest"
                android:scaleType="fitXY"
                android:layout_margin="5dp"
                />

            <TextView
                android:id="@+id/content_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hello"
                android:gravity="center"
                android:fontFamily="@font/sangmon"/>


            <ImageView
                android:id="@+id/content_image2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/forest"
                android:scaleType="fitXY"
                android:layout_margin="5dp"
                />

            <TextView
                android:id="@+id/content_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hello"
                android:gravity="center"
                android:fontFamily="@font/sangmon"/>


            <ImageView
                android:id="@+id/content_image3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/forest"
                android:scaleType="fitXY"
                android:layout_margin="5dp"
                />

            <TextView
                android:id="@+id/content_text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hello"
                android:gravity="center"
                android:fontFamily="@font/sangmon"/>


            <ImageView
                android:id="@+id/content_image4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/forest"
                android:scaleType="fitXY"
                android:layout_margin="5dp"
                />




        </LinearLayout>




    </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>