<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:background="@color/colorWhite"
   >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/detail_name"
            android:layout_width="380dp"
            android:layout_height="45dp"
            android:layout_alignBottom="@+id/detail_image"
            android:layout_alignParentStart="true"
            android:background="@drawable/shadow"
            android:gravity="center"
            android:text="TextView"
            android:fontFamily="@font/sangmon"
            android:textColor="#4c4c4c"
            android:textSize="20dp"


            android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <TextView
                android:id="@+id/content_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hello"
                android:gravity="center"
                android:fontFamily="@font/sangmon"/>


            <ImageView
                android:id="@+id/content_image1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:layout_margin="5dp"
                />

            <TextView
                android:id="@+id/content_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hello"
                android:gravity="center"
                android:fontFamily="@font/sangmon"/>


            <ImageView
                android:id="@+id/content_image2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:layout_margin="5dp"
                />

            <TextView
                android:id="@+id/content_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hello"
                android:gravity="center"
                android:fontFamily="@font/sangmon"/>


            <ImageView
                android:id="@+id/content_image3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:layout_margin="5dp"
                />

            <TextView
                android:id="@+id/content_text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hello"
                android:gravity="center"
                android:fontFamily="@font/sangmon"/>


            <ImageView
                android:id="@+id/content_image4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:layout_margin="5dp"
                />

            <TextView
                android:id="@+id/content_text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hello"
                android:gravity="center"
                android:fontFamily="@font/sangmon"/>


            <ImageView
                android:id="@+id/content_image5"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:layout_margin="5dp"/>



        </LinearLayout>




    </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>