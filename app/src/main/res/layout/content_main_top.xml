    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:id="@+id/action_barr"
        android:background="@color/colorWhite"
        android:elevation="12dp">


        <TextView
            android:id="@+id/detail_name"
           android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:fontFamily="@font/jua"
            android:paddingTop="2dp"
            android:gravity="center"
            android:text="위급이"
            android:textColor="#4c4c4c"
            android:textSize="25dp" />

    </LinearLayout>



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
      >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"


        android:background="@color/colorOrange"

        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageButton
            android:id="@+id/btn_shelter"
            android:layout_width="120dp"
            android:layout_height="120dp"


            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="35dp"
            android:background="@color/colorWhite"
            android:onClick="shelter_btn"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/circle_sh" />


        <ImageButton
            android:id="@+id/btn_hospital"
            android:layout_width="120dp"
            android:layout_height="120dp"


            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/btn_shelter"
            android:layout_marginBottom="100dp"
            android:layout_marginRight="35dp"
            android:background="@color/colorWhite"

            android:onClick="hospital_btn"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/circle_hos" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="74dp"
            android:layout_marginStart="63dp"
            android:fontFamily="@font/jua"
            android:text="대피소 위치"
            android:textColor="@color/colorWhite"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView7"
            android:layout_marginEnd="68dp"
            android:fontFamily="@font/jua"
            android:text="병원위치"
            android:textColor="@color/colorWhite"
            android:textSize="15dp" />



