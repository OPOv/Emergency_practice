<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="302dp"

        tools:ignore="MissingConstraints"

        >

        <ImageButton
            android:id="@+id/btn_shelter"
            android:layout_width="134dp"
            android:layout_height="125dp"


            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="36dp"
            android:background="@color/colorWhite"
            android:onClick="shelter_btn"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/shelter2" />


        <ImageButton
            android:id="@+id/btn_hospital"
            android:layout_width="134dp"
            android:layout_height="125dp"


            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/btn_shelter"
            android:layout_marginRight="36dp"
            android:layout_marginBottom="70dp"
            android:background="@color/colorWhite"
            android:onClick="hospital_btn"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/hospital2" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="142dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="52dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/app_logo_text" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="43dp"
            android:layout_height="37dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/imageView2"
            android:layout_marginStart="38dp"
            app:srcCompat="@drawable/app_logo_image" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>